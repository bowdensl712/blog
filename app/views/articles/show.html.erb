<% content_for :title do %>
  <%= truncate @article.title, length: 20, separator: ' ' %> - Postblog
<% end %>

<h1><%= @article.title %></h1>

<img src="<%= @article.image_link %>" class="article_picture" alt="No Image Found">

<p><%= @article.body %></p>

<ul>
  <li>Language: <%= @article.language %></li>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  }%></li>
  <li><%= link_to "Return to home", root_path %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a Comment</h2>
<%= render 'comments/form' %>

<%= render 'footer'%>
